@model IEnumerable<CourseP3.Areas.Admin.Models.FAQ>


<div class="site-section ftco-subscribe-1 site-blocks-cover pb-4" style="background-image: url('../../images/bg_1.jpg')">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-7">
                <h2 class="mb-0">FAQ</h2>
                <p>Answer frequently asked questions.</p>
            </div>
        </div>
    </div>
</div>
<div class="custom-breadcrumns border-bottom">
    <div class="container">
        <a href="/Home">Home</a>
        <span class="mx-3 icon-keyboard_arrow_right"></span>
        <span class="current">FAQ</span>
    </div>
</div>
<div class="container mt-5">
    <div class="row">
        <div class="accordion col-lg-7" id="accordionExample">


            <!-- Accordion card -->

            @foreach (var item in Model)
            {
                <!-- Accordion card -->
                <div class="card">
                    <div class="card-header" style="background:#ffffff" id="headingOne+@item.Id">
                        <h5 class="mb-0">
                            <div class="btn" style="text-decoration:none;font-size:20px;background :#ffffff; word-wrap: break-word; text-align:left;      
      white-space:normal; 
       " type="button" data-toggle="collapse" data-target="#collapseOne+@item.Id" aria-expanded="false" aria-controls="collapseOne+@item.Id">
                                <div style="width:100%;height:auto;color:black">

                                    @item.Question
                                </div>
                            </div>
                        </h5>
                    </div>

                    <div id="collapseOne+@item.Id" class="collapse show" aria-labelledby="headingOne+@item.Id" data-parent="#accordionExample">
                        <div class="card-body">
                            @item.Answer
                        </div>
                    </div>
                </div>

            }
        </div>
        <div class="col-lg-5">
            <img src="~/images/blog_1.jpg" width="100%" height="auto" alt="Alternate Text" />
        </div>
    </div>
</div>
<!-- Accordion wrapper -->
