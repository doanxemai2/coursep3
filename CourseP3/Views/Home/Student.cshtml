                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        <div class="row">

                            <div class="col-md-3">
                                <label>Course</label>
                            </div>
                            <div class="col-md-3">
                                <label>CourseStatus</label>
                            </div>
                            <div class="col-md-2">
                                <label>Point</label>
                            </div>
                            <div class="col-md-2">
                                <label>Status</label>
                            </div>
                            <div class="col-md-2">
                                <label>Exercise</label>
                            </div>
                        </div>
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-md-3">
                                    <p>@item.Course.Name</p>
                                </div>
                                switch (item.Status)
                                {
                                    case (int)StudentCourse.StudentCourseStatus.Completed:
                                        if (item.Point < 4 && item.Point >= 0)
                                        {

                                            <div class="col-md-3" style="color:red">Fail</div>
                                            <div class="col-md-2">
                                                <p>@item.Point</p>
                                            </div>
                                        }
                                        if (item.Point >= 4)
                                        {
                                            <div class="col-md-3" style="color:forestgreen">Pass</div>
                                            <div class="col-md-2">
                                                <p>@item.Point</p>
                                            </div>
                                        }
                                        <div class="col-md-2">
                                            Completed
                                        </div>
                                        break;
                                    case (int)StudentCourse.StudentCourseStatus.Done:
                                        if (item.PointEx < 40 && item.PointEx >= 0)
                                        {

                                            <div class="col-md-3" style="color:red">Fail</div>
                                            <div class="col-md-2">
                                                <p>@item.PointEx %</p>
                                            </div>
                                        }
                                        if (item.PointEx >= 4)
                                        {
                                            <div class="col-md-3" style="color:forestgreen">Pass</div>
                                            <div class="col-md-2">
                                                <p>@item.PointEx %</p>
                                            </div>
                                        }
                                        <div class="col-md-2">
                                            Done exercise
                                        </div>
                                        break;
                                    case (int)StudentCourse.StudentCourseStatus.Learning:
                                        <div class="col-md-3"></div>
                                        <div class="col-md-2">
                                        </div>
                                        <div class="col-md-2">
                                            Studying
                                        </div>
                                        <div class="col-md-2">
                                            <a href="@Url.Action("Question", new {courseId = item.CourseId})">Do exercises</a>
                                        </div>
                                        break;
                                    default: break;
                                }
                            }

                        </div>
                        
                    </div>
                    <div class="tab-pane fade" id="semester2" role="tabpanel" aria-labelledby="semester2-tab">
                        <div class="row">
                            <div class="col-md-3">
                                <label>Course</label>
                            </div>
